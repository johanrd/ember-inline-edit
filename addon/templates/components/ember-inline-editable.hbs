{{#if (has-block)}}
  {{yield}}
{{else}}
  {{#if valueIsEmpty}}
    <span class="gray-text">
      {{placeholder}}
    </span>
  {{else}}
    {{value}}
  {{/if}}

  {{#if showEditButton}}
    <span onclick={{action attrs.on-edit}} class="ember-inline-edit-toggle-btn {{editButtonClass}}">
      {{editLabel}}
    </span>
  {{/if}}
{{/if}}
